{
  "name": "@flybondi/flynamo",
  "version": "1.0.0",
  "description": "An AWS DynamoDB client wrapper",
  "author": "Flybondi <dev@flybondi.com> (https://www.flybondi.com)",
  "homepage": "https://flybondi.github.io/flynamo",
  "bugs": {
    "url": "https://github.com/flybondi/flynamo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flybondi/flynamo"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "src/"
  ],
  "scripts": {
    "coverage": "cat .coverage/lcov.info | codacy-coverage --username nelson-flybondi --projectName flynamo",
    "generate-docs": "jsdoc -c jsdoc.json",
    "prettier": "prettier --write src/**/*.js index.js",
    "report": "run-s test.coverage coverage",
    "test": "jest src/",
    "test.watch": "jest src/ --watchAll",
    "test.coverage": "yarn test src/ --coverage --coverageDirectory .coverage"
  },
  "keywords": [
    "flybondi",
    "dynamodb",
    "flynamo",
    "amazon",
    "client",
    "wrapper",
    "aws"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=7"
  },
  "dependencies": {
    "dynamodb-data-types": "^3.0.1",
    "dynamodb-update-expression": "^0.1.21",
    "dynamodb-wrapper": "^1.4.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^23.1.5",
    "codacy-coverage": "^3.0.0",
    "commitlint": "^7.0.0",
    "docdash": "^0.4.0",
    "eslint": "^5.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.3.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "run-s test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/npm",
      {
        "path": "@semantic-release/exec",
        "cmd": "npx run-s generate-docs"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "docs/"
        ],
        "message": "chore(release): ${nextRelease.version} \n\n${nextRelease.notes}"
      }
    ],
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "analyzeCommits": {
      "path": "@semantic-release/commit-analyzer",
      "preset": "angular"
    },
    "publish": [
      {
        "path": "@semantic-release/npm"
      },
      {
        "path": "@semantic-release/github"
      }
    ]
  }
}
