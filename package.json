{
  "name": "@flybondi/flynamo",
  "version": "1.0.0",
  "description": "A DynamoDB client wrapper",
  "main": "index.js",
  "scripts": {
    "test": "jest src/",
    "test:coverage": "jest src/ --coverage",
    "test:watch": "jest src/ --watchAll",
    "format": "prettier --write \"src/**/*.js\" index.js",
    "lint": "eslint src/ index.js",
    "generate-docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "flybondi",
    "dynamodb",
    "flynamo",
    "amazon",
    "client",
    "wrapper"
  ],
  "author": "Flybondi <dev@flybondi.com> (https://www.flybondi.com)",
  "license": "MIT",
  "dependencies": {
    "dynamodb-data-types": "^3.0.1",
    "dynamodb-update-expression": "^0.1.21",
    "dynamodb-wrapper": "^1.4.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^23.1.2",
    "commitlint": "^7.0.0",
    "docdash": "^0.4.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.10",
    "jest": "^23.2.0",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.6"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "run-s test"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:ramda/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "ramda"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "no-extra-semi": 2,
      "strict": [
        "error",
        "global"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  }
}
